# Home
GET     /                       controllers.HomeController.index

# Productos
GET     /products               controllers.ProductsController.list
GET     /products/:id           controllers.ProductsController.details(id: Long)

# Carrito
POST    /cart/add/:id           controllers.ProductsController.addToCart(id: Long)
GET     /cart                   controllers.ProductsController.viewCart
POST    /checkout               controllers.ProductsController.checkout

